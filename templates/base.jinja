<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href={{ url_for("static", filename="/css/style.css") }}>
        {% block head %}
        {% endblock %}
        <title>{{ title }}</title>
    </head>
    <body>
        <header>
        {% if current_user.is_authenticated %}
            <a class="btn" href="\logout">{{ current_user.full_name }}</a>  
        {% else %}
            <a class="btn" href="\login">Login</a>
            <a class="btn" href="\sign_in">Sign in</a>
        {% endif %} 
        </header>
        {% block content %}
        {% endblock %}
    </body>
</html>
